<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="horizontal"
    android:background="@drawable/gradient_background_base_app">

    <LinearLayout
        android:layout_width="348dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/gradient_background"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="162dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/modelCoche"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="3"
                android:text="Ejemplo"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:textAppearance="@style/EstiloTextoEmpresarialMinus"/>

            <FrameLayout
                android:layout_width="108dp"
                android:layout_height="86dp"
                android:layout_margin="1dp">

                <ImageButton
                    android:id="@+id/comprarButton"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:background="@null"
                    android:contentDescription="@string/btn_carrito_de_compras"
                    android:scaleType="centerInside"
                    android:src="@drawable/button_selector"
                    tools:src="@drawable/carrito_de_compras" />

            </FrameLayout>

        </LinearLayout>

        <View
            android:layout_width="25dp"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/imagenCoche"
            android:layout_width="157dp"
            android:layout_height="159dp"
            android:scaleType="centerInside" />

    </LinearLayout>

</LinearLayout>

