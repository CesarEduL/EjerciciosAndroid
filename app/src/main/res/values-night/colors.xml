        <item name="android:textStyle">bold</item> <!-- Texto en negrita -->
        <item name="android:fontFamily">sans-serif</item> <!-- Fuente personalizada (Roboto) -->
        <item name="android:letterSpacing">0.02</item> <!-- Espaciado entre letras -->
        <item name="android:textAllCaps">true</item> <!-- Texto en mayúsculas -->
