<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <stroke
                android:width="4dp"
                android:color="#B72432" />
            <corners android:radius="40dp" />
            <size
                android:width="90dp"
                android:height="90dp" />
        </shape>
    </item>
    <item>
        <shape>
            <stroke
                android:width="8dp"
                android:color="#00000000" />
            <corners android:radius="0dp" />
        </shape>
    </item>
</selector>